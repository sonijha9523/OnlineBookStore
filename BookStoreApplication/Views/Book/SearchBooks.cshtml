        @foreach (var item in productList)
        {

            <form asp-action="AddToCart" asp-controller="Order" method="post">
                <div class="container">
                    <div class="row table-active">
                        <div class="col-md-2 order-div ">
                            <img src="@item.Image" style="width:130px;height:165px" />

                        </div>
                        <div class="col-md-2 order-div "><br /><br /><br />
                            @item.Title

                        </div>
                        <div class="col-md-2 order-div ">
                            <br /><br /><br />
                            @item.Price

                        </div>
                        

                        <div class="col-md-3 order-div ">
                            <br /><br /><br />
                            <input value="VIEW DETAILS" class="btn btn-dark" style="width:auto" onclick="@("window.location.href='" + @Url.Action("ViewBook", "Book",new { id = item.BookId }) + "'")" />

                        </div>
                        <div class="col-md-3 order-div ">
                            <br /><br /><br />
                            <input type="submit" value="ADD TO CART" class="btn btn-dark" />

                        </div>
                        <input type="hidden" asp-for="BookId" value="@item.BookId" />
                        <input type="hidden" asp-for="Title" value="@item.Title" />
                        <input type="hidden" asp-for="SubCategoryId" value="@item.SubCategoryId" />
                        <input type="hidden" asp-for="CategoryId" value="@item.CategoryId" />
                        <input type="hidden" asp-for="Price" value="@item.Price" />

                    </div>
                </div>
            </form>

        }
        <div class="container">
            <div class="row">
                <div class="col-12"><br /><br />
                    <input type="submit" value="VIEW CART" class="btn btn-lg btn-dark" onclick="@("window.location.href='" + @Url.Action("ViewCart", "Order") + "'")" />

