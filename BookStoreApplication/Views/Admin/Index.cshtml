@using BookStoreWebService.Models.BookDB;
@model IList<BookStoreWebService.Models.BookDB.Book>

@{
    ViewData["Title"] = "HomePage";
    ViewData["Title"] = "Index";
    var book = ViewBag.AllBooks; 
}
@{
    IEnumerable<Category> categories = ViewData["Categories"] as IEnumerable<Category>;
}
<html>
<head>  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body id="LoginForm">
   
    <marquee><b style="color:black">.....THAT'S THE THING ABOUT BOOKS, THEY LET YOU TRAVEL WITHOUT MOVING YOUR FEET.....</b></marquee>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" style="color:white">BOOK STORE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
                aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link active" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="@("window.location.href='" + @Url.Action("Contact", "Admin") + "'")">Contact <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="@("window.location.href='" + @Url.Action("About", "Admin") + "'")">About <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="@("window.location.href='" + @Url.Action("Register", "Admin") + "'")">SignUp <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="@("window.location.href='" + @Url.Action("Login", "Admin") + "'")"> Login <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" onclick="@("window.location.href='" + @Url.Action("LoginAdmin", "Admin") + "'")">AdminLogin <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <div class="search-container">
                <form action="/action_page.php">
                    <input type="text" placeholder="Search.." name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </div>
    </nav>

    <br />
    <div id="slider">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <img src="~/images/slider1.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/slider2.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/slider3.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/slider4.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/slider5.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/slider6.png" class="img-responsive" />
                </div>
                <div class="carousel-item">

                    <img src="~/images/im.jpg" class="img-responsive" />
                </div>
                <div class="carousel-item">


                    <img src="~/images/hpimage.jpg" class="img-responsive" />
                </div>
                <div class="carousel-item acti">


                    <img src="~/images/images.jpg" class="img-responsive" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br /><hr />
    <div class="container">
        <div class="row">

            <div class="col-md-4">
                <nav>
                    <button class="btn btn-secondary btn-block" style="background-color:black;border: 1px solid;color: white;padding: 10px 50px;cursor: pointer;width: 100%;display: block;" type="button">CATEGORIES</button>

                    @foreach (var c in categories)
                    {
                        <div>

                            <button class="btn btn-secondary btn-block btn-cat" role="group"  type="button"   onclick="@("window.location.href='" + @Url.Action("Index", "Admin",new { id = c.CategoryId}) + "'")">@c.CategoryTitle</button>
                        </div>
                    }
                </nav>
            </div>
            <div class="col-md-8">
                <div class="row text-center text-lg-left">
                        @foreach (var obj in Model)
                        {

                            <div class="card card-body text-center border-secondary" style="align-items:center;width: 10rem;margin:10px; padding: 1px 1px 1px 1px;display: table;clear: both;">
                                <img class="card-img-top" src="@obj.Image" alt="Card image cap" style="margin:10px ;width: 100px;height: 150px;">
                                <h6>@obj.BookTitle</h6>
                                <h6>@obj.Price</h6>
                            </div>


                        }                   
                </div>

            </div>
        </div>
    </div>
  
</body>
</html>