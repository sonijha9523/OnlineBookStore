@using BookStoreLibrary
@model Credentials
@{
    ViewData["Title"] = "Login";
}

    <div class="container w3-container w3-center w3-animate-top" style="width:600px">
        <h1 class="form-heading" style="text-align:center">login Form</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>User Login</h2>
                    <p>Please enter your email and password</p>
                </div>
                <form id="Login" asp-controller="Home" asp-action="Login" method="post">
                    <div class="form-group" style="text-align:center">

                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email" required>
                        <span asp-validation-for="Email" class=" text-danger"></span>
                    </div>
                    <div class="form-group" style="text-align:center">
                        <input type="password" asp-for="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control" id="pwd" placeholder="Enter password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="forgot">
                        <a href="reset.html">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>




