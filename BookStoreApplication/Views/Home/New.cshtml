            <a onclick="@("window.location.href='" + @Url.Action("Register", "Home") + "'")" class="w3-bar-item w3-button w3-padding-large w3-hide-small">NEW USER</a>
            <div class="w3-dropdown-hover w3-hide-small">
                <button class="w3-padding-large w3-button" title="More">CATEGORIES <i class="fa fa-caret-down"></i></button>
